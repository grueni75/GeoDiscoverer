<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.untouchableapps.android.geodiscoverer">
    <!-- <uses-permission android:name="com.android.vending.BILLING"></uses-permission> -->
    <application
        android:name=".GDApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/GDStyle">
        <activity
          android:name=".ui.activity.ViewMap"
          android:configChanges="orientation|keyboardHidden|screenSize"
          android:label="@string/app_name"
          android:launchMode="singleTask">

            <!-- Launcher icon -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- GPX files via file extension -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.action.SEND_MULTIPLE" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                  android:host="*"
                  android:mimeType="*/*"
                  android:pathPattern=".*\\.gpx"
                  android:scheme="file" />
                <data
                  android:host="*"
                  android:mimeType="*/*"
                  android:pathPattern=".*\\.gpx"
                  android:scheme="content" />
                <data
                  android:host="*"
                  android:mimeType="*/*"
                  android:pathPattern=".*\\.GPX"
                  android:scheme="file" />
                <data
                  android:host="*"
                  android:mimeType="*/*"
                  android:pathPattern=".*\\.GPX"
                  android:scheme="content" />
            </intent-filter>
            <!-- GPX files via http scheme -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.action.SEND_MULTIPLE" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                  android:host="*"
                  android:mimeType="*/*"
                  android:pathPattern=".*\\.gpx"
                  android:scheme="http" />
                <data
                  android:host="*"
                  android:mimeType="*/*"
                  android:pathPattern=".*\\.gpx"
                  android:scheme="https" />
                <data
                  android:host="*"
                  android:mimeType="*/*"
                  android:pathPattern=".*\\.GPX"
                  android:scheme="http" />
                <data
                  android:host="*"
                  android:mimeType="*/*"
                  android:pathPattern=".*\\.GPX"
                  android:scheme="https" />
            </intent-filter>
            <!-- GPX files via mime types -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.action.SEND_MULTIPLE" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                  android:host="*"
                  android:mimeType="text/xml"
                  android:scheme="file" />
                <data
                  android:host="*"
                  android:mimeType="text/xml"
                  android:scheme="content" />
                <data
                  android:host="*"
                  android:mimeType="text/plain"
                  android:scheme="file" />
                <data
                  android:host="*"
                  android:mimeType="text/plain"
                  android:scheme="content" />
                <data
                  android:host="*"
                  android:mimeType="text/plain"
                  android:scheme="file" />
                <data
                  android:host="*"
                  android:mimeType="application/octet-stream"
                  android:scheme="file" />
                <data
                  android:host="*"
                  android:mimeType="application/octet-stream"
                  android:scheme="content" />
                <data
                  android:host="*"
                  android:mimeType="application/gpx"
                  android:scheme="content" />
                <data
                  android:host="*"
                  android:mimeType="application/gpx"
                  android:scheme="file" />
                <data
                  android:host="*"
                  android:mimeType="application/gpx"
                  android:scheme="content" />
                <data
                  android:host="*"
                  android:mimeType="application/gpx+xml"
                  android:scheme="file" />
                <data
                  android:host="*"
                  android:mimeType="application/gpx+xml"
                  android:scheme="content" />
                <data
                  android:host="*"
                  android:mimeType="application/x-gpx"
                  android:scheme="file" />
                <data
                  android:host="*"
                  android:mimeType="application/x-gpx"
                  android:scheme="content" />
                <data
                  android:host="*"
                  android:mimeType="application/x-gpx+xml"
                  android:scheme="file" />
                <data
                  android:host="*"
                  android:mimeType="application/x-gpx+xml"
                  android:scheme="content" />
                <data
                  android:host="*"
                  android:mimeType="application/xml"
                  android:scheme="file" />
                <data
                  android:host="*"
                  android:mimeType="application/xml"
                  android:scheme="content" />
                <data
                  android:host="*"
                  android:mimeType="x-cache/gpx"
                  android:scheme="file" />
                <data
                  android:host="*"
                  android:mimeType="x-cache/gpx"
                  android:scheme="content" />
                <data
                  android:host="*"
                  android:mimeType="x-cache/gpx+xml"
                  android:scheme="file" />
                <data
                  android:host="*"
                  android:mimeType="x-cache/gpx+xml"
                  android:scheme="content" />
                <data
                  android:host="*"
                  android:mimeType="x-cache/x-gpx"
                  android:scheme="file" />
                <data
                  android:host="*"
                  android:mimeType="x-cache/x-gpx"
                  android:scheme="content" />
                <data
                  android:host="*"
                  android:mimeType="x-cache/x-gpx+xml"
                  android:scheme="file" />
                <data
                  android:host="*"
                  android:mimeType="x-cache/x-gpx+xml"
                  android:scheme="content" />
            </intent-filter>
            <!-- Map archive files -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                  android:host="*"
                  android:mimeType="*/*"
                  android:pathPattern=".*\\.gda"
                  android:scheme="file" />
                <data
                  android:host="*"
                  android:mimeType="*/*"
                  android:pathPattern=".*\\.gda"
                  android:scheme="content" />
            </intent-filter>
            <!-- Text sent by other apps (e.g., addresses) -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.Preferences"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/preferences" />
        <activity
            android:name=".ui.activity.ShowHelp"
            android:label="@string/button_label_help"
            android:theme="@style/GDStyle.NoTitleBar.Fullscreen" />
        <activity
            android:name=".ui.activity.AuthenticateGoogleBookmarks"
            android:label="@string/authenticate_google_bookmarks"
            android:theme="@style/GDStyle">
        </activity>
        <activity
            android:name=".ui.activity.RequestPermissions"
            android:label="@string/title_activity_request_permissions" />
        <!--
        <activity
            android:name=".GetGoogleMapPlaceList"
            android:label="@string/get_google_map_place_list"
            android:theme="@style/GDStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.untouchableapps.android.geodiscoverer.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />
        </provider>

        <service
            android:name=".logic.GDService"
            android:exported="true"
            android:foregroundServiceType="location" />
        <service android:name=".logic.GDMessageListenerService">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <action android:name="com.google.android.gms.wearable.CHANNEL_EVENT" />

                <data
                    android:host="*"
                    android:pathPrefix="/com.untouchableapps.android.geodiscoverer"
                    android:scheme="wear" />
            </intent-filter>
        </service>

        <service
            android:name=".logic.GDAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service" />
        </service>
    </application>

    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="false" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <!-- For Android Wear -->
    <uses-permission android:name="com.google.android.permission.PROVIDE_BACKGROUND" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

</manifest>