<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/dialog_address_history_entry_text"
      android:layout_width="match_parent"
      android:layout_height="@dimen/md_button_height"
      android:textSize="@dimen/md_content_textsize"
      android:gravity="center_vertical"
      android:background="?attr/selectableItemBackground"
      android:clickable="true"/>


    <LinearLayout
        android:id="@+id/dialog_address_history_entry_editor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

      <EditText
        android:id="@+id/dialog_address_history_entry_edit_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/md_button_height"
        android:singleLine="true"
        android:inputType="text"
        android:textSize="@dimen/md_content_textsize"
        />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_address_history_entry_group_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/list"/>

        <Spinner
            android:id="@+id/dialog_address_history_entry_group_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>

      </LinearLayout>
    </LinearLayout>
  </FrameLayout>

  <FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
      android:id="@+id/dialog_address_history_entry_edit_button"
      android:layout_width="wrap_content"
      android:layout_height="48dp"
      android:layout_gravity="center"
      android:paddingLeft="5dp"
      android:paddingRight="5dp"
      android:src="@drawable/edit"
      android:background="?attr/selectableItemBackground"/>

    <ImageButton
      android:id="@+id/dialog_address_history_entry_clear_button"
      android:layout_width="wrap_content"
      android:layout_height="48dp"
      android:layout_gravity="center"
      android:paddingLeft="5dp"
      android:paddingRight="5dp"
      android:src="@drawable/clear"
      android:background="?attr/selectableItemBackground"
      android:visibility="gone"/>

  </FrameLayout>

  <FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
      android:id="@+id/dialog_address_history_entry_remove_button"
      android:layout_width="wrap_content"
      android:layout_height="48dp"
      android:layout_gravity="center"
      android:paddingLeft="5dp"
      android:paddingRight="5dp"
      android:src="@drawable/remove"
      android:background="?attr/selectableItemBackground"/>

    <ImageButton
      android:id="@+id/dialog_address_history_entry_confirm_button"
      android:layout_width="wrap_content"
      android:layout_height="48dp"
      android:layout_gravity="center"
      android:paddingLeft="5dp"
      android:paddingRight="5dp"
      android:src="@drawable/confirm"
      android:background="?attr/selectableItemBackground"
      android:visibility="gone"/>

  </FrameLayout>

</LinearLayout>