        <service android:name=".GDMessageListenerService">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <action android:name="com.google.android.gms.wearable.CHANNEL_EVENT"/>
                <data android:scheme="wear" android:host="*" android:pathPrefix="/com.untouchableapps.android.geodiscoverer" />
            </intent-filter>
        </service>

        <service
          android:name=".GDService"
          android:exported="true"
          android:foregroundServiceType="location" />

        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true"/>

        <activity
            android:name=".ui.Dialog"
            android:launchMode="singleTop"
            android:label="@string/title_activity_dialog"
            android:taskAffinity="com.untouchableapps.android.geodiscoverer.ui.dialog">
        </activity>

        <activity
            android:name=".ui.ViewMap"
            android:launchMode="singleTop"
            android:exported="true"
            android:label="@string/title_activity_viewmap"
            android:taskAffinity="com.untouchableapps.android.geodiscoverer.ui.viewmap"
            android:theme="@style/NoSwipeTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

